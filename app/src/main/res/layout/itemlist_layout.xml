<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/list_item_bg"
    android:id="@+id/rl">
    <RelativeLayout
        android:descendantFocusability="blocksDescendants"

        android:id="@+id/ll"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_marginTop="10dp"
            android:layout_marginStart="10dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:id="@+id/tvItemName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="start"
            android:fontFamily="@font/actor"
            android:text="@string/name"
            android:textColor="@color/green1"
            android:textSize="15sp"
            android:layout_marginLeft="10dp" />
        <TextView

            android:layout_toStartOf="@id/tvItemPrice"
            android:layout_marginTop="6dp"
            android:layout_marginLeft="10dp"
            android:layout_marginEnd="50dp"
            android:layout_marginBottom="10dp"
            android:layout_below="@id/tvItemName"
            android:gravity="start"
            android:singleLine="false"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/tvdescri"
            android:text="jjjjjgggggggggggggggggggggggggggggggggggggg"
            android:textColor="@color/textGray"
            android:layout_marginStart="10dp"
            android:layout_toLeftOf="@id/tvItemPrice"
            android:layout_marginRight="50dp" />

        <TextView
            android:layout_marginBottom="10dp"
            android:layout_alignTop="@id/tvItemName"
            android:layout_alignParentEnd="true"
            android:maxEms="10"
            android:id="@+id/tvItemPrice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="10dp"
            android:layout_marginRight="10dp"
            android:background="@drawable/listprice_bg"
            android:fontFamily="serif"
            android:gravity="center_vertical"
            android:padding="7dp"
            android:paddingStart="15dp"
            android:paddingEnd="15dp"
            android:text="@string/price"
            android:textColor="#333"
            android:textSize="14sp"
            android:layout_alignParentRight="true" />
        <View
            android:layout_marginEnd="30dp"
            android:layout_marginStart="10dp"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="#D2CACACA"
            android:layout_alignParentBottom="true"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="30dp" />
    </RelativeLayout>







</RelativeLayout>